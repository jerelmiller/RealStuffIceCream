.header
  .logo
    = image_tag '/images/logo_realstuff.png'
  #login-page-title
    %h1 Admin
= render :partial => 'global/flash', :locals => {:flash => flash}
#login-main

  %h1#login-title Login

  .login-form
    - form_for([:admin, @user_session]) do |f|
      = f.error_messages
      .login-label
        = f.label :username
        %br/
        = f.text_field :username
      .login-label
        = f.label :password
        %br/
        = f.password_field :password
      %p
        = f.submit 'Login'
  .main-link
    = link_to image_tag('/images/icon_small_larrow.png', :border => 0) + ' main', root_url
