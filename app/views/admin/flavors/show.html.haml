- content_for :title do
  Admin: Viewing #{@flavor.name}
= render :partial => 'admin/partials/header'

.main
  .edit-title
    %h1= @flavor.name
  = render :partial => 'admin/flavors/show_links' 
  .content 
    %font.labels Name: 
    %font.text #{@flavor.name}
    %br
    %br
    %font.labels Product: 
    %font.text #{@flavor.product.name}
    %br
    %br
    %font.labels Description: 
    %font.text #{@flavor.description}
