.flavor-form	
  - form_for([:admin, @flavor]) do |f|
    = f.error_messages
    %p.label
      = f.label :name
      %br
      = f.text_field :title, :size => 45
    %p.label
      = f.label :product
      %br
      = f.select :product_id, @products.collect { |a| [a.name, a.id] }, :include_blank => false
    %p.label
      = f.label :description
      %br
      = f.text_area :description, :rows => 2, :cols => 40
    %p
      = f.submit 'Save'
