.form
  - form_for([@event]) do |f|
    = f.error_messages
    .label
      = f.label :title
      %br/
      = f.text_field :title
    .label
      = f.label :description
      %br/
      = f.text_area :description
    .label
      = f.label :start_time
      %br/
      = f.datetime_select :start_time, :default => Time.now
    .label
      = f.label :end_time
      %br/
      = f.datetime_select :end_time, :include_blank => :true
    .label
      = f.label :location
      %br/
      = f.text_field :location
    .label
      = f.label :link
      %br/
      = f.text_field :link
    %p
      = f.submit 'Save'
