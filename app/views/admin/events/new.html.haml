- content_for :title do
  Admin: New Event

%h1 New event
- form_for(@event) do |f|
  = f.error_messages
  %p
    = f.label :title
    %br/
    = f.text_field :title
  %p
    = f.label :description
    %br/
    = f.text_area :description
  %p
    = f.label :start_time
    %br/
    = f.datetime_select :start_time
  %p
    = f.label :end_time
    %br/
    = f.datetime_select :end_time
  %p
    = f.label :location
    %br/
    = f.text_field :location
  %p
    = f.label :link
    %br/
    = f.text_field :link
  %p
    = f.submit 'Create'
= link_to 'Back', events_path
