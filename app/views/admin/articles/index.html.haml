- content_for :title do
  Admin: News Articles Listing
= render :partial => '/admin/partials/header'

.main
  .title
    %h1 &nbsp; &nbsp; &nbsp; &nbsp;News Articles
  .button
    = link_to image_tag ('/images/icon_large_add.png', :border => 0) + ' New Article', new_admin_article_path
  %table
    %th Title
    %th Created On
    %th Body
    -@articles.each do |article|
      %tr
        %td.flavor= article.title
        %td.product= article.created_at.strftime("%B %d, %Y")
        %td.description= truncate(article.body, :length => 70)
        %td.icon= link_to image_tag ('/images/icon_small_show.png', :border => 0), admin_article_path(article), :title => 'Show article'
        %td.icon= link_to image_tag ('/images/icon_small_edit.png', :border => 0), edit_admin_article_path(article), :title => 'Edit article'
        %td.icon= link_to image_tag ('/images/icon_small_delete.png', :border => 0), admin_article_path(article), :confirm => 'Are you sure?', :method => :delete, :title => 'Delete article'